{
  "name": "express-starter",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env PLATFORM=development DEBUG=* node --inspect --watch --watch-path=server --import tsx server/index.ts | pino-pretty",
    "start": "cross-env NODE_ENV=production PLATFORM=production node --enable-source-maps ./dist/index.js",
    "build": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\" && tsc && node -e \"require('fs').cpSync('server/views', 'dist/views', {recursive: true})\"",
    "test": "jest --passWithNoTests",
    "lint": "eslint ./server/",
    "format": "prettier --write server/",
    "format:check": "prettier --check server/"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.4",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "express-ejs-layouts": "^2.5.1",
    "helmet": "^8.1.0",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
